{
  "name": "hardcodecoder/github-contribution-streak",
  "description": "Show your GitHub contribution streak including total contributions, current and longest streak on readme profile",
  "keywords": [
    "github",
    "dynamic",
    "readme",
    "contributions",
    "streak",
    "stats"
  ],
  "license": "MIT",
  "version": "1.0.0",
  "homepage": "https://github.com/HardcodeCoder/Github-Contribution-Streak",
  "autoload": {
    "classmap": [
      "api/"
    ]
  },
  "require": {
    "php": "8.5",
    "ext-intl": "*",
    "vlucas/phpdotenv": "5.6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11"
  },
  "scripts": {
    "start": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8000 -t api"
    ],
    "test": "./vendor/bin/phpunit --testdox tests",
    "lint": "npx prettier --check *.md **/*.{php,md,js,css}",
    "lint-fix": "npx prettier --write *.md **/*.{php,md,js,css}"
  }
}